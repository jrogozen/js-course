<h2>Quizzy Quiz</h2>

<div class="list-quizzes">
  <form class="select-quiz-form">
    <select></select>
    <input type="submit" value="submit"/>
  <form>
</div>

<div class="quiz">
</div>

<div class="quiz-question">
  <form class="questions-form">
  </form>
</div>



<script type="text/template" class="quiz-template">
  <h3><%%= title %></h3>
</script>

<script type="text/template" class="all-quizzes-template">
  <option data-quiz-id="<%%= id %>"><%%= title %></option>
</script>

<script type="text/template" class="question-template">
  <%%= question %>

  <form class="questions-form">
    <%% for (var choice in choices ) { %>
      <input type="radio" data-question-id="<%%= id %>" value="<%%= choices[choice] %>"><%%= choices[choice] %><br>
    <%% } %>

    <input type="submit" value="submit answer">
  </form>
  
</script>

